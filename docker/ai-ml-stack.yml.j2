version: '3.8'

# AI/ML Stack - LocalAI, AnythingLLM, Langfuse
# Managed by Ansible

services:
  localai:
    image: localai/localai:latest
    container_name: localai
    restart: unless-stopped
    ports:
      - "8080:8080"
    environment:
      - THREADS={{ localai_threads | default(4) }}
      - CONTEXT_SIZE={{ localai_context_size | default(4096) }}
      - DEBUG={{ localai_debug | default('false') }}
    volumes:
      - /opt/data/localai:/models
    networks:
      - ai-ml

  anythingllm:
    image: mintplexlabs/anythingllm:latest
    container_name: anythingllm
    restart: unless-stopped
    ports:
      - "3001:3001"
    environment:
      - STORAGE_DIR=/app/server/storage
      - LLM_PROVIDER={{ anythingllm_llm_provider | default('localai') }}
      - EMBEDDING_ENGINE={{ anythingllm_embedding_engine | default('native') }}
      - VECTOR_DB={{ anythingllm_vector_db | default('lancedb') }}
    volumes:
      - /opt/data/anythingllm:/app/server/storage
    networks:
      - ai-ml
    depends_on:
      - localai

  qdrant:
    image: qdrant/qdrant:latest
    container_name: qdrant
    restart: unless-stopped
    ports:
      - "6333:6333"
      - "6334:6334"
    volumes:
      - /opt/data/qdrant:/qdrant/storage
    networks:
      - ai-ml

  weaviate:
    image: semitechnologies/weaviate:latest
    container_name: weaviate
    restart: unless-stopped
    ports:
      - "8081:8080"
    environment:
      - AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=true
      - PERSISTENCE_DATA_PATH=/var/lib/weaviate
      - DEFAULT_VECTORIZER_MODULE=none
      - CLUSTER_HOSTNAME=node1
    volumes:
      - /opt/data/weaviate:/var/lib/weaviate
    networks:
      - ai-ml

  langfuse:
    image: langfuse/langfuse:latest
    container_name: langfuse
    restart: unless-stopped
    ports:
      - "3002:3000"
    environment:
      - DATABASE_URL=postgresql://langfuse:langfuse@postgres:5432/langfuse
      - NEXTAUTH_SECRET={{ langfuse_nextauth_secret | default('changeme') }}
      - NEXTAUTH_URL={{ langfuse_nextauth_url | default('http://localhost:3002') }}
    networks:
      - ai-ml
    depends_on:
      - postgres

  postgres:
    image: postgres:15-alpine
    container_name: postgres-langfuse
    restart: unless-stopped
    environment:
      - POSTGRES_USER=langfuse
      - POSTGRES_PASSWORD=langfuse
      - POSTGRES_DB=langfuse
    volumes:
      - /opt/data/postgres-langfuse:/var/lib/postgresql/data
    networks:
      - ai-ml

networks:
  ai-ml:
    driver: bridge
