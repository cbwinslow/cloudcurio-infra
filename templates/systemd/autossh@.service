[Unit]
Description=AutoSSH Tunnel Service for %I
After=network.target

[Service]
Type=simple
User=root
Environment="AUTOSSH_GATETIME=0"
ExecStart=/usr/bin/autossh -M 0 -N -o "ServerAliveInterval 30" -o "ServerAliveCountMax 3" -o "ExitOnForwardFailure yes" %I

Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
